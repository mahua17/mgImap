{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "outDir": "dist",
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true,
  },
  "include": [
    "src",
  ],
  "exclude": [
    "demo",
    "test",
    "node_modules"
  ]
}
